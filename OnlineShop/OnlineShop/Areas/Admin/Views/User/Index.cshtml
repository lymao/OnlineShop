@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Model.EF.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2>Danh sách người dùng</h2>
        @using (Html.BeginForm("Index", "User", FormMethod.Get))
        {
            <div class="row">
                <div class="col-lg-10">
                    <input type="text" name="keyword" style="width:200px" value="@ViewBag.keyword" placeholder="Nhập nội dung tìm kiếm..." />
                    <button type="submit">Tìm kiếm</button><br />
                </div>
            </div><br>
        }
       
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tài khoản</th>
                        <th>Tên</th>
                        <th>Địa chỉ</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.UserName</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.Status</td>
                            <td>
                                <a href="/Admin/User/Edit/@item.ID">Sửa</a> |
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Bạn có chắc muốn xóa?",
                               OnComplete = "$('#row_" + item.ID + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page,keyword= @ViewBag.keyword }))
        </div>
    </div>
</div>